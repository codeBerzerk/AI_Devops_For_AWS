# LLM Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Kubernetes
KUBECONFIG=/path/to/kubeconfig
K8S_NAMESPACE=default

# API
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Security
API_KEY=your-secret-key-here
RATE_LIMIT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Cache
ENABLE_CACHE=true
CACHE_TTL=3600
